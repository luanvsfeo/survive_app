            android:id="@+id/textoNomeid6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/textoNomeid7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textoNomeid8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:visibility="gone"/>








    </LinearLayout>

</LinearLayout>